<% include partials/header %>

    <div class="container">
        
        <header class="jumbotron">
            <div class="container">
                <h1>Welcome to YelpCamp!</h1>
                <p>Give a YELP for your next camp!</p>
                <p><a class="btn btn-primary btn-lg" href="/camp-grounds/new">Add New Campground</a></p>
            </div>
        </header>
        <div class='row'>
            <div class="col-lg-12">
                <h3>Our Most Popular Campgrounds!</h3>
            </div>
        </div>
        <div class='row'>
            <% campygrounds.forEach(function(ground){ %>
                <div class="col-md-3 col-sm-6">
                    <div class='img-thumbnail'>
                        <img class='img-thumbnail' src="<%=ground.image%>">
                        <div class="caption">
                            <h4><%= ground.name %></h4>
                            <p>
                                <a href='/camp-grounds/<%= ground._id %>' class='btn btn-primary'>More Info</a>
                            </p>
                        </div>
                    </div>
                </div>
             <% });   %>
        </div>
                
        
       
        
        <a href="/">Home page!</a>
    </div>
<% include partials/footer %>